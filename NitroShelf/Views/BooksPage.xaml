<Page
    x:Class="NitroShelf.BooksPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:NitroShelf">

	<Grid>
		<GridView x:Name="BooksGrid"
                  IsItemClickEnabled="True"
                  ItemClick="BooksGrid_ItemClick"
                  SelectionMode="None"
                  HorizontalAlignment="Center"
                  VerticalAlignment="Center">

			<GridView.ItemTemplate>
				<DataTemplate x:DataType="local:Book">
					<Border Background="#1E1E1E"
                            CornerRadius="12"
                            Padding="15"
                            Margin="15"
                            Width="350">
						<StackPanel>
							<Image Source="{x:Bind Cover}"
                                   Stretch="Uniform"
                                   MaxHeight="500"
                                   Margin="0,0,0,10"/>

							<TextBlock Text="{x:Bind Title}"
                                       Foreground="White"
                                       FontWeight="SemiBold"
                                       FontSize="16"
                                       TextWrapping="Wrap" />
							<TextBlock Text="{x:Bind Author}"
                                       Foreground="Gray"
                                       FontSize="14"/>
						</StackPanel>
					</Border>
				</DataTemplate>
			</GridView.ItemTemplate>

		</GridView>
	</Grid>
</Page>
